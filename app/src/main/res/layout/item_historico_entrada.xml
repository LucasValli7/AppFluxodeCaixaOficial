<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:padding="10dp"
    app:cardCornerRadius="7dp"
    android:background="@color/blacl_ligth"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_entrada"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_money_mais"
            app:layout_constraintBottom_toBottomOf="@+id/item_valorDataEntrada"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_valorTipoEntrada" />


        <TextView
            android:id="@+id/txt_valorTipoEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FÃ©rias"
            android:textColor="@color/blacl_ligth"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/img_entrada"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txt_valorEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 2.000,00"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/img_entrada"
            app:layout_constraintTop_toBottomOf="@+id/txt_valorTipoEntrada" />


        <TextView
            android:id="@+id/item_valorDataEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="29/08/2023"
            android:textColor="@color/blacl_ligth"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/img_entrada"
            app:layout_constraintTop_toBottomOf="@+id/txt_valorEntrada" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>