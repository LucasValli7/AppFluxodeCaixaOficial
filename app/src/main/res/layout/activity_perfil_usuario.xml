<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PerfilUsuario">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title="Editar perfil"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_icon_back"
        tools:ignore="MissingConstraints" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_usuarioPerfil"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_perfil_icon"
        android:backgroundTint="@color/black"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnSelecionarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar foto"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/transparent"
        android:elevation="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_gravity="bottom"
        android:textSize="10sp"
        />

    <LinearLayout
        android:id="@+id/LinearNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">


        <TextView
            android:id="@+id/edit_AtualizarNome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:gravity="start"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp"
            android:text="App Fluxo de Caixa"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_edit_black"
            tools:ignore="TouchTargetSizeCheck" />
        <View
            android:id="@+id/LinhaDivisoria1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/blacl_ligth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Atual"
        android:layout_marginTop="2dp"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_gravity="bottom"
        android:textSize="10sp"
        />

    <LinearLayout
        android:id="@+id/LinearEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/edit_AtualizarEmail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:text="exemeplo@app.br.com"
            android:textColor="@color/black"
            android:gravity="start"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:drawableRight="@drawable/ic_edit_black"/>

    <View
        android:id="@+id/LinhaDivisoria2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/blacl_ligth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:indeterminateTint="@color/black"
        android:visibility="gone" />








</LinearLayout>
